<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_2_0.dtd">

<service-builder dependency-injector="spring" package-path="com.service" auto-namespace-tables="false">
	<namespace>Guest</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->
	<entity local-service="true" name="Guest" remote-service="false" data-source="guestDatabase">

		<!-- PK fields -->

		<column db-name="id" name="id" primary="true" type="int" />

		<!-- Group instance -->

		<!-- Audit fields -->

		<column db-name="user_name" name="userName" type="String" />
		<column db-name="create_date" name="createDate" type="Date" />
		<column db-name="modified_date" name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<!-- Order -->

		<order by="asc">
			<order-column name="id" />
		</order>

		<!-- Finder methods -->

		<finder name="userName" return-type="Collection">
			<finder-column name="userName" comparator="LIKE"></finder-column>
		</finder>

		<!-- References -->

	</entity>
</service-builder>